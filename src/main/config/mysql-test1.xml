<dbping>
	<task name="salgrade_test" threads="1" executions="1"
		timeBetweenExecutions="100" datasource="jdbc/mysql-db1">
		<query label="sql-1">SELECT *
			FROM dbtools.salgrade
			WHERE hisal &gt; 2500
		</query>
		<query label="sql-2">SELECT * FROM dbtools.salgrade WHERE losal &lt; 1500</query>
		<log-file>${basedir}/log/dbping_${task.name}.log</log-file>
	</task>

	<task name="emp_test" threads="1" executions="10"
		timeBetweenExecutions="10" datasource="jdbc/mysql-db1">
		<query label="deptno10">SELECT * FROM dbtools.emp WHERE deptno = 10</query>
		<query label="deptno20">SELECT * FROM dbtools.emp WHERE deptno = 20</query>
		<query label="deptno30">SELECT * FROM dbtools.emp WHERE deptno = 30</query>
		<query label="deptno40">SELECT * FROM dbtools.emp WHERE deptno = 40</query>
		<query label="mgr">SELECT * FROM dbtools.emp WHERE mgr IN (7839, 7698)</query>
		<log-file>${basedir}/log/dbping_${task.name}.log</log-file>
	</task>
</dbping>